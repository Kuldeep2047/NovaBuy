


<% layout('layouts/boilerplate') %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-6 col-lg-5 mx-auto">
      
      <!-- Flash messages -->
      <%- include('../partials/flash') %>
      
      <!-- Card -->
      <div class="card shadow-lg border-0 rounded-4 p-4">
        <h1 class="h3 fw-bold text-center mb-4">
          <i class="fa-solid fa-right-to-bracket me-2 text-success"></i> Login
        </h1>

        <form action="/login" method="POST">
          <!-- Username -->
          <div class="mb-3">
            <label class="form-label fw-semibold" for="username">Username</label>
            <input type="text" class="form-control rounded-pill shadow-sm" 
                   id="username" name="username" placeholder="Enter username" required>
          </div>
          
          <!-- Password -->
          <div class="mb-3">
            <label class="form-label fw-semibold" for="password">Password</label>
            <input type="password" class="form-control rounded-pill shadow-sm"
                   id="password" name="password" placeholder="Enter password" required>
          </div>

          <!-- Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-success rounded-pill shadow-sm">
              <i class="fa-solid fa-lock me-1"></i> Login
            </button>
          </div>
        </form>

        <!-- Sign up link -->
        <p class="text-center fw-light mt-3 mb-0">
          Donâ€™t have an account? 
          <a href="/register" class="text-decoration-none fw-semibold">Sign up</a>
        </p>
      </div>
    </div>
  </div>
</div>

