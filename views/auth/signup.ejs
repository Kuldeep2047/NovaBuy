<% layout('layouts/boilerplate') %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-6 col-lg-5 mx-auto">
      
      <!-- Flash messages -->
      <%- include('../partials/flash') %>
      
      <!-- Card -->
      <div class="card shadow-lg border-0 rounded-4 p-4">
        <h1 class="h3 fw-bold text-center mb-4">
          <i class="fa-solid fa-user-plus me-2 text-success"></i> Sign Up
        </h1>

        <form action="/register" method="POST">
          <!-- Username -->
          <div class="mb-3">
            <label class="form-label fw-semibold" for="username">Username</label>
            <input type="text" class="form-control rounded-pill shadow-sm"
                   id="username" name="username" placeholder="Enter username" required>
          </div>

          <!-- Email -->
          <div class="mb-3">
            <label class="form-label fw-semibold" for="email">Email</label>
            <input type="email" class="form-control rounded-pill shadow-sm"
                   id="email" name="email" placeholder="Enter email" required>
          </div>

          <!-- Role Selection -->
          <div class="mb-3">
            <p class="fw-semibold mb-2">Register as:</p>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" id="buyer" name="role" value="buyer" required>
              <label class="form-check-label fw-light" for="buyer">Buyer</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" id="seller" name="role" value="seller">
              <label class="form-check-label fw-light" for="seller">Seller</label>
            </div>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label class="form-label fw-semibold" for="password">Password</label>
            <input type="password" class="form-control rounded-pill shadow-sm"
                   id="password" name="password" placeholder="Enter password" required>
          </div>

          <!-- Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-success rounded-pill shadow-sm">
              <i class="fa-solid fa-user-check me-1"></i> Sign Up
            </button>
          </div>
        </form>

        <!-- Login link -->
        <p class="text-center fw-light mt-3 mb-0">
          Already have an account? 
          <a href="/login" class="text-decoration-none fw-semibold">Log in</a>
        </p>
      </div>
    </div>
  </div>
</div>
