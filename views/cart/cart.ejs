

<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<style>
  body {
    background: linear-gradient(135deg, #f0f4ff, #e6f7ff);
  }

  h2 {
    color: #007bff;
  }

  .card {
    border-radius: 20px;
    box-shadow: 8px 8px 15px rgba(0,0,0,0.05), -8px -8px 15px rgba(255,255,255,0.7);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 12px 12px 20px rgba(0,0,0,0.1), -12px -12px 20px rgba(255,255,255,0.8);
  }

  .btn-outline-danger {
    transition: all 0.3s;
  }

  .btn-outline-danger:hover {
    background: #ff4d4f;
    color: #fff;
    border: none;
  }

  .text-success {
    font-weight: 600;
    font-size: 1.3rem;
  }

  .card.mt-4 {
    background: #d4edda;
    color: #155724;
    font-weight: 600;
    font-size: 1.2rem;
    border-radius: 15px;
    padding: 15px 20px;
    box-shadow: 4px 4px 10px rgba(0,0,0,0.05), -4px -4px 10px rgba(255,255,255,0.6);
  }

  .btn-success {
    background: linear-gradient(90deg, #00c851, #007e33);
    border: none;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .btn-success:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }

  .alert-info {
    font-size: 1.2rem;
    font-weight: 500;
    border-radius: 15px;
    box-shadow: 4px 4px 12px rgba(0,0,0,0.05), -4px -4px 12px rgba(255,255,255,0.6);
  }
</style>

<div class="container py-5">
  <h2 class="mb-4 fw-bold text-center">
    <i class="fa-solid fa-cart-shopping me-2 text-warning"></i> Your Cart
  </h2>

  <% if(user.cart.length === 0){ %>
    <div class="alert alert-info text-center rounded-3 shadow-sm">
      <i class="fa-solid fa-circle-info me-2"></i> Your cart is empty.
    </div>
  <% } else { %>
    <div class="row g-4">
      <% let total = 0; %>
      <% for(let item of user.cart) { %>
        <% total += item.price; %>
        <div class="col-12">
          <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-1 fw-semibold"><%= item.name %></h5>
                <p class="card-text text-muted mb-0">₹ <%= item.price %></p>
              </div>
              <form action="/user/cart/<%= item._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger rounded-pill">
                  <i class="fa-solid fa-trash"></i> Remove
                </button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Cart Summary -->
    <div class="card mt-4 shadow-sm border-0 rounded-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold">Total:</h5>
        <span class="fs-5 fw-semibold text-success">₹ <%= total %></span>
      </div>
    </div>

    <div class="text-end mt-3">
      <a href="/checkout" class="btn btn-success px-4 rounded-pill shadow-sm">
        <i class="fa-solid fa-credit-card me-1"></i> Checkout
      </a>
    </div>
  <% } %>
</div>
