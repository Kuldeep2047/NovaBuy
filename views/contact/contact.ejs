<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<section class="py-5">
    <div class="container">
      <div class="row justify-content-center mb-4">
        <div class="col-lg-8 text-center">
          <h1 class="fw-bold">Get in Touch</h1>
          <p class="lead text-muted">We’d love to hear from you! Fill out the form below and we’ll get back to you soon.</p>
        </div>
      </div>

      <div class="row g-5">
        <!-- Contact Form -->
        <div class="col-lg-7">
          <form action="/contact" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label fw-semibold">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label fw-semibold">Your Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label fw-semibold">Your Message</label>
                <textarea class="form-control" id="message" name="message" rows="5" placeholder="Type your message..." required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
        </form>

        </div>

        <!-- Contact Info -->
        <div class="col-lg-5">
          <div class="bg-light p-4 rounded shadow-sm">
            <h5 class="fw-bold mb-3">Contact Information</h5>
            <p><i class="fa-solid fa-location-dot me-2 text-primary"></i> 123 Nova Street, New Delhi, India</p>
            <p><i class="fa-solid fa-phone me-2 text-primary"></i> +91 98765 43210</p>
            <p><i class="fa-solid fa-envelope me-2 text-primary"></i> support@novabuy.com</p>
            <hr>
            <h6 class="fw-bold">Follow Us</h6>
            <a href="#" class="me-3 text-dark"><i class="fa-brands fa-facebook fa-lg"></i></a>
            <a href="#" class="me-3 text-dark"><i class="fa-brands fa-twitter fa-lg"></i></a>
            <a href="#" class="me-3 text-dark"><i class="fa-brands fa-instagram fa-lg"></i></a>
            <a href="#" class="text-dark"><i class="fa-brands fa-linkedin fa-lg"></i></a>
          </div>
        </div>
      </div>
    </div>
  </section>