<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<!-- Hero Section -->
<section class="text-center text-white d-flex align-items-center" 
         style="min-height: 90vh; 
                background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
                            url('/images/bgHome.png') 
                            center/cover no-repeat;">
  <div class="container">
    <h1 class="display-3 fw-bold">Welcome to <span class="text-warning">NovaBuy</span></h1>
    <p class="lead mt-3">Your smart shopping companion that makes online shopping easier, faster, and more reliable.</p>
    <a href="/products" class="btn btn-warning btn-lg mt-3">Explore Products</a>
  </div>
</section>


<!-- About Section -->
<section id="about" class="py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 mb-4 mb-md-0">
        <h2 class="fw-bold">About NovaBuy</h2>
        <p class="mt-3">
          NovaBuy is an innovative e-commerce platform designed to bring you the best online shopping experience.
          With a clean design, user-friendly interface, and focus on customer satisfaction,
          NovaBuy ensures that shopping is not just convenient, but also enjoyable.
        </p>
        <a href="#features" class="btn btn-outline-primary mt-3">Why Choose Us</a>
      </div>
      <div class="col-md-6">
        <img src="/images/landingPageImage.png" class="img-fluid rounded shadow-lg" alt="NovaBuy About">
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5 bg-light">
  <div class="container text-center">
    <h2 class="fw-bold mb-5">Why Choose NovaBuy?</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="p-4 border rounded h-100 shadow-sm">
          <i class="fa-solid fa-lightbulb fa-2x text-primary mb-3"></i>
          <h5 class="fw-bold">Smart Shopping</h5>
          <p>Get personalized shopping recommendations tailored just for you.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 border rounded h-100 shadow-sm">
          <i class="fa-solid fa-shield-halved fa-2x text-success mb-3"></i>
          <h5 class="fw-bold">Secure & Reliable</h5>
          <p>Your data and payments are always safe with our advanced security systems.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 border rounded h-100 shadow-sm">
          <i class="fa-solid fa-bolt fa-2x text-warning mb-3"></i>
          <h5 class="fw-bold">Seamless Experience</h5>
          <p>Enjoy fast browsing, smooth checkout, and an easy-to-use interface.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="text-center text-white d-flex align-items-center" 
         style="min-height: 50vh; background: linear-gradient(135deg, #6610f2, #007bff);">
  <div class="container">
    <h2 class="fw-bold">Be Part of the NovaBuy Experience</h2>
    <p class="lead mb-4">Discover a new way to shop smarter. Start your journey today!</p>
    <a href="/contact" class="btn btn-light btn-lg">Get in Touch</a>
  </div>
</section>
